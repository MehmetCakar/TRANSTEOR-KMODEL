generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                    String           @id @default(cuid())
  email                 String           @unique
  passwordHash          String
  isVerified            Boolean          @default(false)
  verificationCode      String?
  verificationExpiresAt DateTime?
  createdAt             DateTime         @default(now())
  updatedAt             DateTime         @updatedAt
  role                  UserRole         @default(USER)
  sessions              Session[]
  surveyResponses       SurveyResponse[]
  progresses            VideoProgress[]
  videoWatches          VideoWatch[]
}

model Video {
  id              String          @id @default(cuid())
  order           Int             @unique
  title           String
  description     String?
  url             String
  durationSeconds Int
  isActive        Boolean         @default(true)
  survey          Survey?         @relation("VideoSurvey")
  progresses      VideoProgress[]
  videoWatches    VideoWatch[]
}

model VideoProgress {
  id             String    @id @default(cuid())
  userId         String
  videoId        String
  watchedSeconds Int       @default(0)
  isCompleted    Boolean   @default(false)
  startedAt      DateTime  @default(now())
  finishedAt     DateTime?
  User           User      @relation(fields: [userId], references: [id])
  Video          Video     @relation(fields: [videoId], references: [id])

  @@unique([userId, videoId])
}

model VideoWatch {
  id              String   @id @default(cuid())
  userId          String
  videoId         String
  watchedSeconds  Int      @default(0)
  lastPositionSec Int      @default(0)
  isCompleted     Boolean  @default(false)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user  User  @relation(fields: [userId], references: [id])
  video Video @relation(fields: [videoId], references: [id])

  @@unique([userId, videoId])
}

model Survey {
  id        String           @id @default(cuid())
  title     String
  type      SurveyType
  isActive  Boolean          @default(true)
  createdAt DateTime         @default(now())
  videoId   String?          @unique
  video     Video?           @relation("VideoSurvey", fields: [videoId], references: [id])
  questions SurveyQuestion[]
  responses SurveyResponse[]
}

model SurveyResponse {
  id        String   @id @default(cuid())
  userId    String
  surveyId  String
  answers   Json
  createdAt DateTime @default(now())
  Survey    Survey   @relation(fields: [surveyId], references: [id])
  User      User     @relation(fields: [userId], references: [id])

  @@unique([userId, surveyId])
}

model Session {
  id           String    @id @default(cuid())
  userId       String
  path         String
  startedAt    DateTime  @default(now())
  endedAt      DateTime?
  totalSeconds Int?
  userAgent    String?
  User         User      @relation(fields: [userId], references: [id])
}

enum UserRole {
  USER
  ADMIN
}

enum SurveyType {
  PRE
  POST
  FOLLOWUP
  VIDEO
}

model SurveyQuestion {
  id       String @id @default(cuid())
  surveyId String
  order    Int
  text     String

  survey  Survey         @relation(fields: [surveyId], references: [id], onDelete: Cascade)
  options SurveyOption[]

  @@unique([surveyId, order])
  @@index([surveyId])
}

model SurveyOption {
  id         String  @id @default(cuid())
  questionId String
  order      Int
  text       String
  isCorrect  Boolean @default(false)

  question SurveyQuestion @relation(fields: [questionId], references: [id], onDelete: Cascade)

  @@unique([questionId, order])
  @@index([questionId])
}
