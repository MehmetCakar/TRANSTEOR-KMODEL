generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                    String    @id @default(cuid())
  email                 String    @unique
  passwordHash          String
  isVerified            Boolean   @default(false)
  verificationCode      String?
  verificationExpiresAt DateTime?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  // İlişkiler:
  progresses      VideoProgress[]
  surveyResponses SurveyResponse[]
  sessions        Session[]
}

model Video {
  id              String  @id @default(cuid())
  order           Int // 1,2,...8
  title           String
  description     String?
  url             String // videonun dosya ya da stream URL'i
  durationSeconds Int
  isActive        Boolean @default(true)

  progresses VideoProgress[]
  survey     Survey?         @relation("VideoSurvey")
}

model VideoProgress {
  id             String    @id @default(cuid())
  userId         String
  videoId        String
  watchedSeconds Int       @default(0) // kaç saniye izledi
  isCompleted    Boolean   @default(false)
  startedAt      DateTime  @default(now())
  finishedAt     DateTime?

  User  User  @relation(fields: [userId], references: [id])
  Video Video @relation(fields: [videoId], references: [id])

  @@unique([userId, videoId]) // her kullanıcı + video için tek kayıt
}

enum SurveyType {
  PRE // videolardan önce
  POST // eğitim biter bitmez
  FOLLOWUP // 6 ay sonra
  VIDEO
}

model Survey {
  id       String     @id @default(cuid())
  title    String
  type     SurveyType
  isActive Boolean    @default(true)
  video    Video?     @relation("VideoSurvey", fields: [videoId], references: [id])
  videoId  String?    @unique // VIDEO tipi anketler için ilgili video

  questions SurveyQuestion[]
  responses SurveyResponse[]
  createdAt DateTime         @default(now())
}

model SurveyQuestion {
  id       String @id @default(cuid())
  surveyId String
  order    Int
  text     String

  Survey Survey @relation(fields: [surveyId], references: [id])
}

model SurveyResponse {
  id        String   @id @default(cuid())
  userId    String
  surveyId  String
  answers   Json // { questionId: cevap } gibi tutacağız
  createdAt DateTime @default(now())

  User   User   @relation(fields: [userId], references: [id])
  Survey Survey @relation(fields: [surveyId], references: [id])

  @@unique([userId, surveyId]) // her kullanıcı bir anketi bir kere doldursun
}

model Session {
  id           String    @id @default(cuid())
  userId       String
  path         String // hangi sayfa: /video/1, /survey/pre vs
  startedAt    DateTime  @default(now())
  endedAt      DateTime?
  totalSeconds Int? // ileride front-end'ten dolduracağız
  userAgent    String?

  User User @relation(fields: [userId], references: [id])
}
